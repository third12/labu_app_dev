<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/aboutImage"
                android:layout_width="match_parent"
                android:layout_height="233dp"
                android:scaleType="fitCenter" />


            <TextView
                android:paddingLeft="5dp"
                android:paddingRight="5dp"

                android:id="@+id/aboutText"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:fadeScrollbars="true"
                android:isScrollContainer="true"
                android:scrollIndicators="right"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbarSize="14dp"
                android:scrollbarStyle="outsideInset"
                android:scrollbars="vertical"
                android:scrollHorizontally="false"
                android:text="Information"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/aboutText"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:background="@color/purple_500"
                android:text="Select Equipment Below:"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/beakerText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#2196F3"
                    android:clickable="true"
                    android:elevation="20dp"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="Beaker"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/testTubeText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#2196F3"
                    android:clickable="true"
                    android:elevation="20dp"
                    android:layout_marginTop="1dp"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="Test Tube"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/bunsenBurnerText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#2196F3"
                    android:layout_marginTop="1dp"

                    android:clickable="true"
                    android:elevation="20dp"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="Bunsen Burner"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dropperText"
                    android:layout_width="match_parent"
                    android:layout_marginTop="1dp"

                    android:layout_height="wrap_content"
                    android:background="#2196F3"
                    android:padding="10dp"
                    android:text="Dropper"
                    android:clickable="true"
                    android:elevation="20dp"
                    android:gravity="center_vertical"
                    android:textSize="23sp"   android:textStyle="bold"  />

                <TextView
                    android:id="@+id/forcepsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"

                    android:background="#2196F3"
                    android:padding="10dp"
                    android:text="Forceps"
                    android:clickable="true"
                    android:elevation="20dp"
                    android:gravity="center_vertical"
                    android:textSize="23sp"    android:textStyle="bold" />

                <TextView
                    android:id="@+id/funnelText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#2196F3"
                    android:padding="10dp"
                    android:text="Funnel"
                    android:clickable="true"
                    android:elevation="20dp"
                    android:layout_marginTop="1dp"

                    android:gravity="center_vertical"
                    android:textSize="23sp"    android:textStyle="bold" />

                <TextView
                    android:id="@+id/graduatedCylinderText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#2196F3"
                    android:padding="10dp"
                    android:text="Graduated Cylinder"
                    android:clickable="true"
                    android:elevation="20dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="1dp"

                    android:textSize="23sp"   android:textStyle="bold"  />

                <TextView
                    android:id="@+id/magnifyingGlassText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#2196F3"
                    android:padding="10dp"
                    android:layout_marginTop="1dp"

                    android:elevation="20dp"
                    android:text="Magnifying Glass"
                    android:clickable="true"
                    android:textSize="23sp"    android:textStyle="bold" />

                <TextView
                    android:id="@+id/microscopeText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#2196F3"
                    android:padding="10dp"
                    android:elevation="20dp"
                    android:layout_marginTop="1dp"

                    android:text="Microscope"
                    android:clickable="true"
                    android:textSize="23sp"    android:textStyle="bold" />

                <TextView
                    android:id="@+id/spatulaText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#2196F3"
                    android:padding="10dp"
                    android:layout_marginTop="1dp"

                    android:text="Spatula"
                    android:clickable="true"
                    android:elevation="20dp"
                    android:gravity="center_vertical"
                    android:textSize="23sp"   android:textStyle="bold"  />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>
